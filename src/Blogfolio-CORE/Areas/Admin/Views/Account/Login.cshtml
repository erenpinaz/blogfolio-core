@model Blogfolio_CORE.Areas.Admin.ViewModels.LoginEditModel

@{
    ViewData["PageTitle"] = "Login to Blogfolio";
    Layout = "_AccountLayout";
}

<section class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
                <div class="row">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <div class="card rounded shadow shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title text-center">Login to Blogfolio</h3>
                                <hr />

                                <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST" asp-action="Login" asp-controller="Account" asp-area="Admin">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <input asp-for="UserName" placeholder="@Html.DisplayNameFor(q => q.UserName)" class="form-control rounded" required>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" placeholder="@Html.DisplayNameFor(q => q.Password)" class="form-control rounded" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="custom-control custom-checkbox mb-3">
                                        <input asp-for="RememberMe" class="custom-control-input">
                                        <label asp-for="RememberMe" class="custom-control-label">Remember Me?</label>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-baseline">
                                        <a asp-action="Index" asp-controller="Blog" asp-area="">&larr; Go Back</a>
                                        <button type="submit" class="btn btn-primary btn-lg float-right" id="btnLogin">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>