@{
    ViewData["PageTitle"] = "Media Library";
}

<section class="media-library">
    <div class="card">
        <div class="card-body">

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="upload-tab" data-toggle="tab" href="#upload" role="tab" aria-controls="upload" aria-selected="true">Upload</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="library-tab" data-toggle="tab" href="#library" role="tab" aria-controls="library" aria-selected="false">Library</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane" id="upload" role="tabpanel" aria-labelledby="upload-tab">
                    <div id="media-uploader" data-url="@Url.Action("UploadMedia", "Dashboard")" class="dropzone">
                        <div class="fallback">
                            <input name="file" type="file" multiple />
                        </div>
                    </div>
                </div>
                <div class="tab-pane active" id="library" role="tabpanel" aria-labelledby="library-tab">
                    <div id="toolbar">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#" onclick="bulkDeleteMedia(event);">Delete</a>
                            </div>
                        </div>
                    </div>
                    <table id="media-table"
                           data-toggle="table"
                           data-toolbar="#toolbar"
                           data-search="true"
                           data-show-refresh="true"
                           data-show-toggle="true"
                           data-show-fullscreen="true"
                           data-show-columns="true"
                           data-show-export="true"
                           data-click-to-select="true"
                           data-minimum-count-columns="2"
                           data-pagination="true"
                           data-id-field="postid"
                           data-page-list="[10, 25, 50]"
                           data-show-footer="true"
                           data-side-pagination="server"
                           data-url="@Url.Action("MediaTableData", "Dashboard")">
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="mediaid" data-visible="false">Media ID</th>
                                <th data-field="name" data-formatter="mediaNameFormatter"
                                    data-events="mediaNameEvents">
                                    Name
                                </th>
                                <th data-field="thumbpath" data-width="64px" data-formatter="mediaThumbnailFormatter">Thumbnail</th>
                                <th data-field="size" data-formatter="mediaSizeFormatter">Size</th>
                                <th data-field="type">Type</th>
                                <th data-field="created" data-formatter="jsonDateFormatter">Created</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>